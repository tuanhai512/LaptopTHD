@model THDShop.ViewModel.DeliAddress.CreateDeliAddressInput
@{
    var Cart = Session["Cart"] as THDShop.ViewModel.Cart;
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/Assets/css/checkout.css" rel="stylesheet" />
    <link href="~/Assets/css/use.css" rel="stylesheet" />
    <link href="~/Assets/css/GioHang.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="title">
        <div class="sh-table-cell">
            Thanh Toán Tiền Mặt
        </div>
        <div class="title2 sh-table-cell">
            <span class="title2-all">
                <a href="/Home">Home</a>
            </span>
            <span class="title2-all title2-cart"> > </span>
            <span class="title2-all">
                <a href="GioHang/ShowToCart">Giỏ Hàng</a>
            </span>
            <span class="title2-all title2-cart"> > </span>
            <span class="title2-all title2-cart">Thanh Toán</span>
        </div>
    </div>
    <div class="shopping-cart">
        <div class="padding">
            <div class="giohang1">
                <div class="giohang2both">
                    Giỏ Hàng
                </div>
                <div class="giohang2both">
                    Chọn Phương Thức
                </div>
                <div class="giohang2 giohang2both">
                    Thanh Toán Tiền Mặt
                </div>
                <div class="giohang2both">
                    Thành Công
                </div>
            </div>
        </div>
        <div class="padding-table">
            <div class="row">
                @using (Html.BeginForm("DeliveryForm", "Cart", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div style="width:60%">
                            <h3 style="font-size: 24px; font-weight: 800;">Thông tin Khách Hàng</h3>
                            <label for="fname"><i></i> Họ Và Tên</label>
                            @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control" } })
                            <p>@Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })</p>

                            <label for="phone"><i></i> Số Điện Thoại</label>
                            @Html.EditorFor(model => model.PHONE, new { htmlAttributes = new { @class = "form-control" } })
                            <p>@Html.ValidationMessageFor(model => model.PHONE, "", new { @class = "text-danger" })</p>
                            <label for="adr"><i></i> Địa Chỉ</label>
                            @Html.EditorFor(model => model.ADDRESS, new { htmlAttributes = new { @class = "form-control" } })
                            <p>@Html.ValidationMessageFor(model => model.ADDRESS, "", new { @class = "text-danger" })</p>
                            <label for="phuong"><i></i>Phường</label>
                            @Html.EditorFor(model => model.WARD, new { htmlAttributes = new { @class = "form-control"} })
                            <p>@Html.ValidationMessageFor(model => model.WARD, "", new { @class = "text-danger" })</p>
                            <label for="quan"><i></i>Quận</label>
                            @Html.EditorFor(model => model.DISTRICT, new { htmlAttributes = new { @class = "form-control" } })
                            <p>@Html.ValidationMessageFor(model => model.DISTRICT, "", new { @class = "text-danger" })</p>
                            <label for="ghichu"><i></i>Ghi Chú</label>
                            @Html.EditorFor(model => model.NOTE, new { htmlAttributes = new { @class = "form-control" } })
                            <div style="padding-bottom:100px;font-weight:500;color:#ffc200;">*BẠN ĐANG THANH TOÁN BẰNG TIỀN MẶT</div>
                    </div>

                    <div class="col-25">
                        <div>
                            <h2 style="color:#1a1a1a">
                                TỔNG GIỎ HÀNG
                                <span c style="color:#1a1a1a;padding-left:15px">
                                    <i class="fa fa-shopping-cart"></i>
                                    <b>
                                        @Html.Action("BagCart", "Cart")
                                    </b>
                                </span>
                            </h2>
                            <div>
                                @foreach (var pro in Cart.Items)
                                {
                                    double total = pro._product.PRICE * pro._quantity;
                                    <p style="margin-block-start: 0em; margin-block-end: 0em;" class="carttotal">
                                        @Html.DisplayFor(model => pro._product.NAME) x @Html.DisplayFor(model => pro._quantity)
                                        <span class="price">@total.ToString("N0") VNĐ</span>
                                    </p>
                                }
                                <p style="margin-block-start:1mm; margin-block-end: 0em;" class="carttotal">
                                    TỔNG TIỀN
                                    <span class="price" style="color:black">
                                        <b>
                                            @Cart.Total_money().ToString("N0") VNĐ
                                        </b>
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div style="padding-top:15px">
                            <input class="Update" type="submit" value="Tiếp Tục Thanh Toán" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
