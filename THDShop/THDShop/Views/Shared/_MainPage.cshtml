<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>THDShop</title>
    <link rel="stylesheet" href="~/Assets/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Assets/css/site.css" />

    <link href="https://fonts.googleapis.com/css2?family=Asap:wght@600&display=swap" rel="stylesheet">

    <link rel="shortcut icon" href="~/Assets/main/freda/src/img/favicon.png" />

    <!-- css -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:400,500,700&display=swap">
    <link rel="stylesheet" href="~/Assets/main/freda/src/app/css/uikit-custom.min.css" />
    <link rel="stylesheet" href="~/Assets/main/freda/src/app/css/app.css" />
    <link href="~/Assets/css/QuangCao.css" rel="stylesheet" />

    <link href="~/Assets/css/fontasp.css" rel="stylesheet" />


    <link rel="stylesheet" href="~/Assets/ECome/css/owl.carousel.min.css">
    <link rel="shortcut icon" href="~/Assets/ECome/img/favicon.png" type="~/Assets/ECome/image/png">
    <link rel="stylesheet" href="~/Assets/ECome/css/slick.css">
    <link rel="stylesheet" href="~/Assets/ECome/css/slick-theme.css">
    <link rel="stylesheet" href="~/Assets/ECome/css/owl.theme.default.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/ECome/css/style.css">
</head>
<body>
    <header class="yb-main-header" id="main-header">

        <!-- home section -->
        <div class="yb-full-height " id="home">
            <section class="yb-profile-desc">
                <div class="yb-section-point-wrapper" data-uk-parallax="opacity: 1, 0;">
                    <div class="uk-container">
                        <div class="yb-section-point">
                            <sup>16</sup>
                            <span>Nhóm</span>
                        </div>
                    </div>
                </div>
                <div class="yb-graphics">
                    <div class="yb-graphic-1" data-uk-parallax="blur: 0,30;"></div>
                    <div class="yb-graphic-2" data-uk-parallax="blur: 0,30;"></div>
                </div>
                <div class="hometext-center">
                    <div class="uk-text-center yb-profile-desc-wrap uk-position-relative">
                        <img src="~/main/freda/src/img/x1.png" alt="" width="60" />
                        <h1 class="uk-text-bold yb-gradient-text"><span>Laptop</span> <span>Shop</span></h1>
                        <div class="uk-text-bold yb-myjob">
                            Đồng sáng tạo <span id="typed" class="typed"></span>
                        </div>
                    </div>
                </div>
                <img src="https://www.aorus.com/image/banner/Performance%20Above%20All-1620383654.jpg" style="width:100%;opacity:0.15;" />
            </section>

        </div><!-- end home section -->
        <!-- main menu -->
        <nav class="yb-main-menu " id="main-menu">
            <div class="uk-container" data-uk-navbar>
                <div class="uk-navbar-left">
                    <a class="yb-logo uk-navbar-item uk-logo" href="@Url.Action("Index","HomeUser")"><img width="150" height="100" src="~/Assets/Images/logothdshopbgblack.png" /></a>
                </div>
                <div class="uk-navbar-right uk-hidden@m">
                    <a class="uk-navbar-toggle" href="#" id="btn-menu-toggle">
                        <span data-uk-navbar-toggle-icon class="yb-icon-menu"></span>
                        <span data-uk-icon="close" class="yb-icon-close"></span>
                    </a>
                </div>
                <div class="yb-menu-toggle-wrapper" id="menucollapse">
                    <div class="uk-navbar-center">
                        <ul class="uk-navbar-nav" data-uk-scrollspy-nav="closest: li; scroll: false; offset: 79 ">
                            <li>
                                <a href="@Url.Action("Index","HomePage")"> Trang Chủ </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Product","HomePage")"> Sản Phẩm </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Voucher","HomePage")"> Voucher </a>
                            </li>
                        </ul>
                    </div>
                    <div class="uk-navbar-right">
                        <ul class="uk-navbar-nav yb-social-icons">
                            <li>
                                <a href="@Url.Action("ShowToCart","Cart")">
                                    <span>
                                        @Html.Action("BagCart", "Cart")
                                    </span>
                                    <img style="filter:invert(1);width:25px;" src="~/Assets/Images/shopping.png" />
                                </a>
                            </li>
                            @if (Session["Email"] == null)
                            {
                                <li><a href="@Url.Action("LoginAccount","LoginCustomer")">Đăng nhập</a></li>
                                <li><a href="@Url.Action("RegisterUser","LoginCustomer")">Đăng ký</a></li>
                            }
                            else
                            {
                                <li>
                                    <div style="padding-top:30px;" class="cart">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" id="label5" style="color: #dbdbdb;">
                                            @Session["Email"]
                                        </a>
                                        <div class="dropdown-menu dropdown-cart" style="min-width: 180px;">
                                            <ul class="mini-products-list">
                                                @if (Session["ID"] != null)
                                                {
                                                    <li class="item-cart">
                                                        <div>
                                                            <a style="color: #000000;" href="@Url.Action("Details", "LoginCustomer", new { id = Session["ID"] })">
                                                                Thông tin cá nhân
                                                            </a>
                                                        </div>
                                                    </li>
                                                    <li class="item-cart">
                                                        <div>
                                                            <a style="color: #000000;" href="@Url.Action("DonDat", "LoginCustomer", new { id = Session["ID"] })">
                                                                Đơn đặt
                                                            </a>
                                                        </div>
                                                    </li>
                                                    <li class="item-cart">
                                                        <div>
                                                            <a style="color: #000000;" href="@Url.Action("MyGift", "LoginCustomer",new { id = Session["ID"] })">
                                                                Voucher của tôi
                                                            </a>
                                                        </div>
                                                    </li>
                                                }
                                                <li class="item-cart">
                                                    <div>
                                                        <a style="color: #000000;" href="@Url.Action("Logout", "LoginCustomer")">
                                                            Đăng xuất
                                                        </a>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav><!-- end main menu -->
    </header>

    <main class="yb-main-content">
        <!-- banner -->

        <section id="about" class="yb-section">
            <div class="yb-my-profile">
                <!--image slider start-->
                <div class="slider">
                    <div class="slides">
                        <!--radio buttons start-->
                        <input type="radio" name="radio-btn" id="radio1">
                        <input type="radio" name="radio-btn" id="radio2">
                        <input type="radio" name="radio-btn" id="radio3">
                        <input type="radio" name="radio-btn" id="radio4">
                        <!--radio buttons end-->
                        <!--slide images start-->
                        <div class="slide first">
                            <img src="https://bizweb.dktcdn.net/100/330/208/files/6-msi-gl-gaming.jpg?v=1601544293324" style="width:100%" alt="">
                        </div>
                        <div class="slide">
                            <img src="https://static.ladipage.net/5bf3dc7edc60303c34e4991f/banner-laptop-t7-01-20200710043331.jpg" style="width:100%" alt="">
                        </div>
                        <div class="slide">
                            <img src="https://static.ladipage.net/5bf3dc7edc60303c34e4991f/banner-06-20200611071129.jpg" style="width:100%" alt="">
                        </div>
                        <div class="slide">
                            <img src="https://static.ladipage.net/5bf3dc7edc60303c34e4991f/banner-01-1567506590.png" style="width:100%" alt="">
                        </div>
                        <!--slide images end-->
                        <!--automatic navigation start-->
                        <div class="navigation-auto">
                            <div class="auto-btn1"></div>
                            <div class="auto-btn2"></div>
                            <div class="auto-btn3"></div>
                            <div class="auto-btn4"></div>
                        </div>
                        <!--automatic navigation end-->
                    </div>
                    <!--manual navigation start-->
                    <div class="navigation-manual">
                        <label for="radio1" class="manual-btn"></label>
                        <label for="radio2" class="manual-btn"></label>
                        <label for="radio3" class="manual-btn"></label>
                        <label for="radio4" class="manual-btn"></label>
                    </div>
                    <!--manual navigation end-->
                </div>
                <!--image slider end-->

            </div>
        </section>

        <!--Sản phẩm-->
        <section id="resume" class="yb-section">
            <div class="yb-my-profile">
                <div class="uk-container">
                    <div class="uk-grid-collapse uk-child-width-expand@m" data-uk-grid>
                        <div>
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer class="yb-main-footer-wrapper">
        <div class="waveHorizontals">
            <div id="waveHorizontal1" class="waveHorizontal" data-uk-img data-src="src/img/bg/wave1.svg"></div>
            <div id="waveHorizontal2" class="waveHorizontal" data-uk-img data-src="src/img/bg/wave2.svg"></div>
            <div id="waveHorizontal3" class="waveHorizontal" data-uk-img data-src="src/img/bg/wave3.svg"></div>
        </div>
        <a href="#body-app" class="uk-visible@s yb-totop yb-inner-link" data-uk-totop></a>
        <div class="yb-main-footer">
            <div class="uk-container">
                <div data-uk-grid class="uk-child-width-1-2@s">
                    <div class="uk-margin-remove uk-text-left@s">
                        &copy; 2021 Nhóm 16 : Hải Thịnh Đường.
                    </div>
                    <div class="uk-margin-remove uk-text-right@s">
                        <div class="yb-footer-social">
                            <a href="#">Facebook</a>
                            <a href="#">Instagram</a>
                            <a href="#">Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Assets/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Assets/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/js/site.js" asp-append-version="true"></script>

    <!-- js -->
    <script src="~/Assets/js/QuangCaoJS.js"></script>
    <script src="~/Assets/main/freda/src/app/js/plugins.min.js"></script>
    <script src="~/Assets/main/freda/src/app/js/app.js"></script>



    <script src="~/Assets/ECome/js/jquery.js"></script>
    <script src="~/Assets/ECome/js/bootstrap.js"></script>
    <script src="~/Assets/ECome/js/owl.carousel.min.js"></script>
    <script src="~/Assets/ECome/js/slick.js"></script>
    <script src="~/Assets/ECome/js/countdown.js"></script>
    <script src="~/Assets/ECome/js/main.js"></script>

</body>
</html>

