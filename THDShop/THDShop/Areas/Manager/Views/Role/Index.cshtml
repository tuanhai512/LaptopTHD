@model IEnumerable<THDShop.ROLE>

@{
}
@using (Html.BeginForm("Searchname", "Role"))
{
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Chức vụ</h1>
        <a href="@Url.Action("Create", "Role")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Tạo chức vụ
        </a>
    </div>
    <div class="text-center">
        <div>
            <div class="tbl-header">
                <table cellpadding="0" cellspacing="0" border="0">
                    <thead class="table-header">
                        <tr>
                            <th class="header__item">
                                <a class="filter__link filter__link--number" id="id" href="#">
                                    Tên chức vụ
                                </a>
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div>
                <table cellpadding="0" cellspacing="0" border="0">
                    <tbody class="table-content">
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr class="table-row">

                                    <td class="table-data">
                                        @Html.DisplayFor(modelItem => item.NAME)
                                    </td>
                                    <td style="display: flex;align-content: center;flex-wrap: wrap;flex-direction: column;">
                                        <a href="@Url.Action("Edit", "Role", new { id = item.ID })" class="btn btn-sm btn-warning" style="margin-bottom: 5px;">Sửa</a>
                                        <a href="@Url.Action("Delete", "Role", new { id = item.ID })" class="btn btn-sm btn-danger" style="margin-bottom: 5px;">Xóa</a>
                                        <a href="@Url.Action("Detail", "Role", new { id = item.ID })" class="btn btn-sm btn-info" style="margin-bottom: 5px;">Chi Tiết</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>}